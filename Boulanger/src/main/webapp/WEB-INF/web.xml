<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">




<!-- Déclaration au serveur applicatif d'une nouvelle servlet-->
	<servlet>
	    <servlet-name>AccueilServlet</servlet-name>  <!-- nom donné à la servlet -->
	    <servlet-class>web.AccueilServlet</servlet-class> <!-- classe qui code cette servlet -->
	</servlet>

<!-- Configuration de l'URL de la servlet -->
	<servlet-mapping>
	    <servlet-name>AccueilServlet</servlet-name>  <!-- nom de la servlet qui répond -->
	    <url-pattern>/accueil</url-pattern>      <!-- URL à laquelle la servlet répond -->
	</servlet-mapping>
	

<!-- Déclaration au serveur applicatif d'une nouvelle servlet-->
	<servlet>
	    <servlet-name>AjouterCommandeServlet</servlet-name>  <!-- nom donné à la servlet -->
	    <servlet-class>web.AjouterCommandeServlet</servlet-class> <!-- classe qui code cette servlet -->
	</servlet>

<!-- Configuration de l'URL de la servlet -->
	<servlet-mapping>
	    <servlet-name>AjouterCommandeServlet</servlet-name>  <!-- nom de la servlet qui répond -->
	    <url-pattern>/commandes-ajouter</url-pattern>      <!-- URL à laquelle la servlet répond -->
	</servlet-mapping>


</web-app> 